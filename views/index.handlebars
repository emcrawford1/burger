<h1 class="font-type">Burger Devour!!!</h1>

<div class="row">
    <div class="col-6">
        <h2 class="font-type">Burgers that have not been eaten.</h2>


        <ul class="font-type">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-1"></div>

    <div class="col-5">
        <h2 class="font-type">Burgers that have been eaten.</h2>

        <ul class="font-type">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>
 <h2 class="font-type">Add a burger</h2>
    <form class="create-form font-type">

        <div class="form-group font-type">
            <label class="font-type" for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>

        <button id="subBtn">Create burger</button>

    </form>